<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aadisriram.quicktact.NFCDataReceivedActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/com_facebook_button_blue"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:id="@+id/facebook_load_profile">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/com_facebook_button_like_icon"/>
        <TextView
            android:id="@+id/facebook_name"
            android:layout_width="wrap_content"
            android:text="Facebook"
            android:textColor="#ffffff"
            android:textSize="10pt"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tw__login_btn"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:id="@+id/twitter_load_profile">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tw__ic_logo_default"/>
        <TextView
            android:background="@color/tw__transparent"
            android:id="@+id/twitter_username"
            android:layout_width="wrap_content"
            android:text="Testing"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="10pt"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/google_plus_load_profile"
        android:background="#dd4b39" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_signin_btn_icon_dark"
            android:layout_gravity="center_horizontal|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/google_plus_username"
            android:textSize="10pt"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical" />

    </LinearLayout>

</LinearLayout>

